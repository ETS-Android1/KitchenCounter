<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:id="@+id/card_requestitem"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="8dp"
        app:cardElevation="4dp"
        app:cardUseCompatPadding="true"
        app:cardBackgroundColor="@color/seashell"
        app:contentPadding="2dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tvRequestedOrderDate_requestitem"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="2dp"
                android:fontFamily="@font/roboto"
                android:hint="date"
                android:inputType="date"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                android:textColor="@color/lotus"
                android:textSize="16sp"
                app:layout_constraintStart_toEndOf="@+id/tvREQUESTEDORDERDATE_requestitem"
                app:layout_constraintTop_toBottomOf="@+id/tvProductDescription_requestitem" />

            <TextView
                android:id="@+id/tvREQUESTEDORDERDATE_requestitem"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="60dp"
                android:layout_marginTop="2dp"
                android:fontFamily="sans-serif-black"
                android:text="requested order date:"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:textColor="@color/lotus"
                android:textSize="16sp"
                app:layout_constraintStart_toEndOf="@+id/tvUnitType_requestitem"
                app:layout_constraintTop_toBottomOf="@+id/tvProductDescription_requestitem" />

            <ImageView
                android:id="@+id/ivRequests_requestitem"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginTop="7dp"
                android:src="@drawable/ic_baseline_inventory_24"
                app:layout_constraintTop_toTopOf="parent"
                tools:ignore="MissingConstraints" />

            <TextView
                android:id="@+id/tvProductName_requestitem"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:layout_marginTop="4dp"
                android:fontFamily="sans-serif-black"
                android:text="Product Name"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                android:textColor="@color/lotus"
                android:textSize="16dp"
                app:layout_constraintStart_toEndOf="@+id/ivRequests_requestitem"
                app:layout_constraintTop_toTopOf="parent"
                tools:ignore="MissingConstraints" />

            <TextView
                android:id="@+id/tvProductDescription_requestitem"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="4dp"
                android:fontFamily="@font/roboto"
                android:text="product description"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                android:textColor="@color/lotus"
                android:textSize="16sp"
                app:layout_constraintStart_toEndOf="@+id/tvProductName_requestitem"
                app:layout_constraintTop_toTopOf="parent"
                tools:ignore="MissingConstraints" />

            <TextView
                android:id="@+id/tvTIMESTAMP_requestitem"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="120dp"
                android:layout_marginTop="4dp"
                android:fontFamily="sans-serif-black"
                android:text="request made on:"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                android:textColor="@color/lotus"
                android:textSize="16dp"
                app:layout_constraintStart_toEndOf="@id/tvProductDescription_requestitem"
                app:layout_constraintTop_toTopOf="parent" />


            <TextView
                android:id="@+id/tvTimestamp_requestitem"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="4dp"
                android:fontFamily="@font/roboto"
                android:hint="date"
                android:inputType="date"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                android:textColor="@color/lotus"
                android:textSize="16dp"
                app:layout_constraintStart_toEndOf="@id/tvTIMESTAMP_requestitem"
                app:layout_constraintTop_toTopOf="parent"
                tools:ignore="MissingConstraints" />

            <TextView
                android:id="@+id/tvAMOUNT_requestitem"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:layout_marginTop="2dp"
                android:layout_marginBottom="4dp"
                android:fontFamily="sans-serif-black"
                android:text="amount:"
                android:textColor="@color/lotus"
                android:textSize="16dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@+id/ivRequests_requestitem"
                app:layout_constraintTop_toBottomOf="@+id/tvProductName_requestitem"
                tools:ignore="MissingConstraints" />

            <TextView
                android:id="@+id/tvAmount_requestitem"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="2dp"
                android:layout_marginBottom="4dp"
                android:fontFamily="@font/roboto"
                android:hint="amount"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                android:textColor="@color/lotus"
                android:textSize="16dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@+id/tvAMOUNT_requestitem"
                app:layout_constraintTop_toBottomOf="@+id/tvProductName_requestitem" />

            <TextView
                android:id="@+id/tvUnitType_requestitem"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="2dp"
                android:layout_marginBottom="4dp"
                android:fontFamily="@font/roboto"
                android:hint="unit type"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                android:textColor="@color/lotus"
                android:textSize="16dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@+id/tvAmount_requestitem"
                app:layout_constraintTop_toBottomOf="@+id/tvProductName_requestitem" />


            <ImageView
                android:id="@+id/ivDelete_requestitem"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginTop="7dp"
                android:layout_marginEnd="24dp"
                android:src="@drawable/ic_baseline_delete_24"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:ignore="MissingConstraints" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</FrameLayout>