<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/solitude"
        app:cardCornerRadius="8dp"
        app:cardElevation="4dp"
        app:cardUseCompatPadding="true"
        app:contentPadding="8dp"
        tools:ignore="MissingConstraints">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvItemName_runninglistitem"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:text="item name"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:textColor="@color/aluminum" />

            <TextView
                android:id="@+id/tvVarietalName_runninglistitem"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:text="varietal name"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:textColor="@color/aluminum" />

            <TextView
                android:id="@+id/tvAmount_runninglistitem"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@color/solitude"
                android:text="amount"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:textColor="@color/aluminum" />

            <TextView
                android:id="@+id/tvUnit_runninglistitem"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/solitude"
                android:text="unit"
                android:layout_weight="2"
                android:textAlignment="viewStart"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:textColor="@color/aluminum" />

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>